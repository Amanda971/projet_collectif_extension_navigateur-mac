{
  "manifest_version": 3,
  "name": "Remember pop-up",
  "version": "1",

  "description": "cr√©ation d'extension sur Chrome",

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["button.js"],
      "css": ["button.css"],
      "html": ["button.html"]
    }
  ],

"permissions": ["storage","activeTab", "scripting"],
    "action": {
        "default_popup": "button.html",
        "default_index": "button.html",
        "default_icon": {
            "16": "/images/get_started16.png",
            "32": "/images/get_started32.png",
            "48": "/images/get_started48.png",
            "128": "/images/get_started128.png"
          }
        }
    }